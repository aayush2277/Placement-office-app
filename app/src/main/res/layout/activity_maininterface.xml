<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maininterface"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/srmlogo" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        app:srcCompat="@drawable/company" />

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:onClick="test1"
        android:text="Students and Companies Details" />

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:onClick="test2"
        android:text="View University Location" />


    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:onClick="visit"
        android:text="University Website" />

</LinearLayout>
    </ScrollView>
</LinearLayout>